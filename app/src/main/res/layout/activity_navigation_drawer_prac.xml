<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigationDrawer.NavigationDrawerPrac"
    tools:openDrawer="start"
    android:id="@+id/nav_drawer_layout">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:background="#009688"
            android:id="@+id/nav_drawer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:title="Navigation Drawer Practice"
            android:titleTextColor="@color/white"
            /> <!--replaced the default actionbar-->

    <FrameLayout
        android:id="@+id/nav_drawer_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E192F1"/>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_drawer_view"
        app:headerLayout="@layout/nav_drawer_header"
        android:layout_gravity="start"
        app:menu="@menu/navigationdrawer_menu"/>

    <!--headerlayout and menu imported from the custom resources in menu and layout resource dir to attach on NavigationView-->



</androidx.drawerlayout.widget.DrawerLayout>